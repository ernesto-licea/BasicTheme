							|Option 3

	.row-fluid
		.span6
			form.form-horizontal(action='#')
				legend Native File input
				.row-fluid
					.span4.form-control-label
						label(for='file1') File input
					.form-controls.span8
						label
							input#file1(type="file")

		.span6
			form.form-horizontal.uniform(action='#')
				legend Uniform File input
				.row-fluid
					.span4.form-control-label
						label(for='file1') File input
					.form-controls.span8
						label
							input#file1(type="file")

	row-fluid
		.span12
			form.form-horizontal(action='#')
				legend Buttons
				.row-fluid
					.span4.form-control-label
						label(for='file1') Buttons
